# Firebase Configuration
NUXT_PUBLIC_FB_API_KEY=your_api_key_here
NUXT_PUBLIC_FB_AUTH_DOMAIN=your_project.firebaseapp.com
NUXT_PUBLIC_FB_PROJECT_ID=your_project_id
NUXT_PUBLIC_FB_STORAGE_BUCKET=your_project.appspot.com
NUXT_PUBLIC_FB_MESSAGING_SENDER_ID=your_sender_id
NUXT_PUBLIC_FB_APP_ID=your_app_id
NUXT_PUBLIC_FB_MEASUREMENT_ID=your_measurement_id

DATABASE_URL=your_database_url_here

HASURA_GRAPHQL_ENDPOINT=your_hasura_graphql_endpoint_here
HASURA_GRAPHQL_ADMIN_SECRET=your_hasura_graphql_admin_secret_here

# Upstash Redis (for rate limiting and ban management)
# Get these from: https://console.upstash.com/redis
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# Master Password (SHA-256 hash)
# To generate: echo -n "your_password" | shasum -a 256
# Or use Node.js: require('crypto').createHash('sha256').update('your_password').digest('hex')
MASTER_PASSWORD_HASH=your_sha256_hash_here

# Application
NODE_ENV=development
BASE_URL=http://localhost:3000

# Optional: Rate Limiting (defaults are set in lib/rate-limit.ts)
# Rate limits are configured using Upstash Ratelimit:
# - default: 30 requests per 10 seconds
# - forcedSlowMode: 1 request per 30 seconds
# - auth: 5 requests per 10 seconds
# - api: 30 requests per 60 seconds
# - ai: 20 requests per 24 hours
# - create: 10 requests per 60 seconds

